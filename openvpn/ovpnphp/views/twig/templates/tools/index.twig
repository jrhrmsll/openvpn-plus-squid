        <h3>Tools</h3>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">Reset Database</div>
        <div class="panel-body">
            <a href="{{ path_for('tools_reset') }}" class="btn btn-warning reset">Run</a>            
