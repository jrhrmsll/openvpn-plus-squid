{% set type_class = {'notice': 'success', 'info': 'info', 'warning': 'warning', 'error': 'danger'} %}

{% for type, class in type_class %}
    {% if flashes[type] %}
        <div class="alert {{ 'alert-' ~ class }}">
            <button type="button" class="close" data-dismiss="alert">
                <span class="fa fa-close"></span>
            </button>
            {% for flash in flashes[type] %}
                {{ flash }}
            {% endfor %}            
        </div>
    {% endif %}
{% endfor %}