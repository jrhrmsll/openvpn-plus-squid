{% extends "layout.twig" %}

{% block content %}
    <div class="admin-title">
        <h3>OVPNScripts Settings</h3>
    </div>

    <div class="admin-content">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Attribute</th>
                    <th>Value</th>
                </tr>
            </thead>

            <tbody>
                {% for attr, value in settings %}
                    <tr>
                        <td>{{ attr }}</td>
                        <td>{{ value }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>        
    </div>
{% endblock %}